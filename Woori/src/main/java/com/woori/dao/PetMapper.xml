<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.woori.dao.PetDAO">

    <!-- 새로운 반려견 정보를 저장하는 매퍼 -->
    <insert id="newPet" parameterType="com.woori.entity.Tb_pet">
        INSERT INTO tb_pet
        (dog_name, dog_gender, dog_weight, dog_birthday, dog_adoption_date, photo1, photo2, photo3)
        VALUES
        (#{dogName}, #{dogGender}, #{dogWeight}, #{dogBirthday}, #{dogAdoptionDate}, #{photo1}, #{photo2}, #{photo3})
    </insert>

    <!-- 특정 사용자의 반려견 목록을 조회하는 매퍼 -->
    <select id="myPet" parameterType="com.woori.entity.Tb_login" resultType="com.woori.entity.Tb_pet">
        SELECT *
        FROM tb_pet
        WHERE login_email = #{login_email}
    </select>

</mapper>